@model Candy_Shop.Models.Zawartosc

<h2>Usuń Zawartość</h2>

<div>
  <h4>Czy na pewno chcesz usunąć ten element?</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Id
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.id)
    </dd>
    <dt class="col-sm-2">
      Sztuk
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.sztuk)
    </dd>
    <!-- Tutaj możesz dodać inne właściwości do wyświetlenia -->
  </dl>
  <form asp-action="Delete" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
      <input type="submit" value="Usuń" class="btn btn-danger" /> |
      <a asp-action="Index">Wróć do listy</a>
    </div>
  </form>
</div>
