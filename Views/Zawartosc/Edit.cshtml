@model Candy_Shop.Models.Zawartosc

@{
  ViewData["Title"] = "Edit";
}

<h1>Edit Zawartosc</h1>

<form asp-action="Edit">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="id" />
  <div class="form-group">
    <label asp-for="sztuk" class="control-label"></label>
    <input asp-for="sztuk" class="form-control" />
    <span asp-validation-for="sztuk" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="id_czekoladki" class="control-label"></label>
    <select asp-for="id_czekoladki" class="form-control" asp-items="ViewBag.Czekoladki"></select>
  </div>
  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
  </div>
</form>

<div>
  <a asp-action="Index">Back to List</a>
</div>
